{
  "name": "uniform-react-components",
  "version": "0.1.0",
  "description": "Components with the same simple interface to handle onChange events",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rm -rf dist",
    "build": "webpack -r ts-node --config webpack-config.ts",
    "test": "jest",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lynt && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lynt": {
    "typescript": true,
    "rules": {
      "no-console": "on"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": ".*\\.test\\.ts$"
  },
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeDDGroup/uniform-react-components.git"
  },
  "author": "Daniel Perez Alvarez <danielpza@protonmail.com>",
  "bugs": {
    "url": "https://github.com/LeDDGroup/uniform-react-components/issues"
  },
  "homepage": "https://github.com/LeDDGroup/uniform-react-components#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/webpack": "^4.4.17",
    "husky": "^1.1.2",
    "jest": "^23.5.0",
    "lynt": "^0.5.3",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.8.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "semantic-release": "^15.10.5",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.0.3",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0"
  }
}
